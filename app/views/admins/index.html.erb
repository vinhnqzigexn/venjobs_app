
<%= link_to "Log out", logout_path, method: :delete %>

<h3>Applied jobs</h3>

<div class='container'>
  <%= form_tag(admin_applies_path, method: 'get') do %>

    <div class='form-group row'>
      <%= label_tag :email,'Email', class:'col-sm-2 col-form-label' %>
      <%= text_field_tag :email, nil, class: 'form-control col-md-6'%>
    </div>

    <div class='form-group row'>
      <%= label_tag 'city','City', class:'col-sm-2 col-form-label' %>
      <%= select_tag(:city_id, options_from_collection_for_select(@cities,:id, :name,9), class: 'form-control col-md-6') %>
    </div>

    <div class='form-group row'>
      <%= label_tag 'industry','Industry', class:'col-sm-2 col-form-label' %>
      <%= select_tag(:industry_id, options_from_collection_for_select(@industries,:id, :name,6), class: 'form-control col-md-6') %>
    </div>

    <div class='form-group row'>
      <div class="col-sm-2">
        <%= label_tag 'date','Date', class:'col-form-label' %>
      </div>
      <div class="col-md-4">
        <%= select_date(date = 1.year.ago,option= { prefix: :start_date, with_css_classes: false}) %>
      </div>
      <div class="col-md-4">  
        <%= select_date(date = Time.now,option= { prefix: :end_date, with_css_classes: false}) %>
      </div>
    </div>
    
    <%= submit_tag 'Search', name: nil,
                      class: 'btn btn-outline-success my-2 my-sm-0' %>
  <% end %>
</div><br>

<div class='container'>
  <h3>Search result:</h3>

  <%= paginate @entries %>
  <%= render @entries %>
  <%= paginate @entries %>
</div>